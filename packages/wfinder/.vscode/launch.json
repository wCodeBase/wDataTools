{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "ts-node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/node_modules/ts-node/dist/bin.js",
            "args": [
                "./src/main.ts",
                "serve",
            ],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test-ts-node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/node_modules/ts-node/dist/bin.js",
            "env": {"NODE_ENV":"testDebug"},
            "args": [
                "node_modules/.bin/mocha",
                "./test/index.ts",
                "./cli/index.ts"
            ],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ts-node-server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/node_modules/ts-node/dist/bin.js",
            "env": {"NODE_ENV":"development"},
            "args": [
                "./src/main.ts",
                "serve",
            ],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
        },
        {
            "name": "Electron Main",
            "program": "${workspaceFolder}/dist/electronMain.js",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "preLaunchTask": "npm: build-electron",
            "env": {"NODE_ENV":"development"},
            "cwd": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Electron cli Main",
            "program": "${workspaceFolder}/dist/main.js",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "preLaunchTask": "npm: build-electron",
            "env": {"NODE_ENV":"development"},
            "cwd": "/",
            "args": [
                "-g",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Ipc Electron Main",
            "program": "${workspaceFolder}/dist/main.js",
            "preLaunchTask": "npm: build-electron-ipc",
            // "cwd": "/",
            "args": [
                "-g",
            ],
            "env": {"NODE_ENV":"development"},
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    ]
}